<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@drawable/gradient_background">

    <!-- Main content - Gmail-like full screen -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <!-- Top App Bar (Gmail-style) -->
        <LinearLayout
            android:id="@+id/topAppBar"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:layout_alignParentTop="true"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingStart="8dp"
            android:paddingEnd="16dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:elevation="4dp"
            android:background="?attr/colorSurfaceVariant">

            <!-- Hamburger Menu -->
            <ImageView
                android:id="@+id/hamburgerIcon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:padding="12dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:srcCompat="@drawable/ic_menu"
                app:tint="#5F6368"
                android:contentDescription="@string/open_navigation" />

            <!-- Search Bar (Gmail-style) -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="?attr/colorSurface">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/searchBar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:hint="@string/search_in_mail"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:textSize="16sp"
                    android:textColor="#202124"
                    android:textColorHint="#80868B"
                    android:fontFamily="sans-serif"
                    android:inputType="text"
                    android:imeOptions="actionSearch"
                    android:maxLines="1"
                    android:gravity="center_vertical" />
            </androidx.cardview.widget.CardView>

            <ImageButton
                android:id="@+id/themeToggleTopBar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="8dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/toggle_theme"
                android:padding="8dp"
                android:src="@drawable/ic_dark_mode_24"
                android:tint="?attr/colorOnSurface" />

            <!-- Avatar (Gmail-style) -->
            <FrameLayout
                android:id="@+id/avatarContainer"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/circle_background">

                <ImageView
                    android:id="@+id/avatarImageView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:background="@drawable/circle_background"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/avatarLetterTextView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:background="@drawable/circle_background"
                    android:fontFamily="sans-serif-medium"
                    android:visibility="gone" />
            </FrameLayout>
        </LinearLayout>

        <!-- Email List (Full Screen like Gmail) -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/inboxRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/topAppBar"
            android:layout_above="@id/bottomActionBar"
            android:background="?attr/colorSurface"
            android:clipToPadding="false"
            android:paddingTop="4dp"
            android:paddingBottom="4dp" />

        <!-- Bottom Action Bar with BOTH buttons -->
        <LinearLayout
            android:id="@+id/bottomActionBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="16dp"
            android:background="@drawable/bottom_bar_background"
            android:elevation="8dp">

            <!-- Refresh Button (Login Activity Style) -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/refreshButton"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="Refresh"
                android:textColor="#4285F4"
                android:textSize="16sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"
                app:cornerRadius="16dp"
                app:strokeColor="#4285F4"
                app:strokeWidth="1dp" />

            <!-- Compose Button (Login Activity Style) -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/composeButton"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:backgroundTint="#4285F4"
                android:text="@string/compose"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"
                app:cornerRadius="16dp"
                android:elevation="2dp" />
        </LinearLayout>

    </RelativeLayout>

    <!-- Navigation Drawer -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="?attr/colorSurface"
        app:headerLayout="@layout/nav_header_top"
        app:menu="@menu/nav_drawer_menu"
        app:itemBackground="@drawable/nav_item_checked_bg"
        app:itemIconSize="24dp"
        app:itemTextColor="?attr/colorOnSurface"
        app:itemIconTint="?attr/colorOnSurface"
        app:itemTextAppearance="@style/NavItemText" />

</androidx.drawerlayout.widget.DrawerLayout>
