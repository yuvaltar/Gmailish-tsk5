<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="72dp"
    android:padding="12dp"
    android:clipChildren="true">

    <!-- Sender Circle Icon -->
    <TextView
        android:id="@+id/senderIcon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:background="@drawable/circle_background"
        android:gravity="center"
        android:text="G"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold" />

    <!-- Email text block -->
    <LinearLayout
        android:id="@+id/emailTextBlock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/senderIcon"
        android:layout_marginStart="12dp"
        android:orientation="vertical"
        android:layout_alignTop="@id/senderIcon"
        android:layout_alignBottom="@id/senderIcon"
        android:layout_toStartOf="@id/timestamp">

        <TextView
            android:id="@+id/sender"
            android:text="GitHub"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/subject"
            android:text="[GitHub] A third-party OA..."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/content"
            android:text="Hey yuvaltar! A third-party app..."
            android:textColor="#777"
            android:textSize="13sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <!-- Timestamp -->
    <TextView
        android:id="@+id/timestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:text="14:05"
        android:textSize="12sp"
        android:textColor="#777" />

    <!-- Star icon -->
    <ImageView
        android:id="@+id/starIcon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/timestamp"
        android:layout_marginTop="4dp"
        android:src="@android:drawable/btn_star_big_off" />

</RelativeLayout>
